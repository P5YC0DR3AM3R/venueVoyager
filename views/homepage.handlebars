{{> header}}

<main class="homepage">
  <section class="welcome-section">
    <h1>Welcome to Venue Voyager</h1>
    <p>Discover your favorite stadiums and teams.</p>
  </section>

  <section class="posts-section">
    <h2>Latest Posts</h2>
    <ul class="posts-list">
      {{#each posts}}
        <li class="post-item">
          <div class="post-content">{{content}}</div>
          <div class="post-rating">Rated: {{rating}} stars</div>
          <div class="post-author">by {{user.name}} at {{stadium.name}}</div>
        </li>
      {{/each}}
    </ul>
  </section>
</main>

{{> footer}}
