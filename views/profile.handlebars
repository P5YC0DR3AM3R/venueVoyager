{{> header}}

<main class="profile-page">
  <section class="profile-section">
    <h1>Profile</h1>
    <div class="profile-info">
      <h2>Welcome, {{name}}</h2>
      <p>Email: {{email}}</p>
    </div>

    <section class="user-posts-section">
      <h3>Your Posts</h3>
      <ul class="user-posts-list">
        {{#each posts}}
          <li class="user-post-item">
            <div class="post-content">{{content}}</div>
            <div class="post-rating">Rated: {{rating}} stars at {{stadium.name}}</div>
            <button class="delete-post-button" data-id="{{id}}">Delete</button>
          </li>
        {{/each}}
      </ul>
    </section>

    <a class="logout-button" href="/logout">Logout</a>
  </section>
</main>

{{> footer}}
